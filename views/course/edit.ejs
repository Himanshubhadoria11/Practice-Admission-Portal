<%- include("../header.ejs") %>
<br><br><br>
<h1 class="bg-info text-center mt-5">Edit Display</h1>
<div class="container">

    <form action="/courseUpdate/<%= c.id %>" method="post">
        <div class="mb-3">
            <label for="">Name</label>
            <input type="text" value="<%= c.name %> " name="name" class="form-control">
        </div>
        <div class="mb-3">
            <label for="">Email</label>
            <input type="text" value="<%= c.email %> "  name="email" class="form-control">
        </div>
<div class="mb-3">
            <label for="">Phone no.</label>
            <input type="number" value="<%= c.phone %>" name="phone" class="form-control">
        </div>
        <div class="mb-3">
            <label for="">DOB</label>
            <input type="date" name="dob" value="<%= c.dob %>" class="form-control">
        </div>

<div class="mb-3">
            <label for="">Address</label>
            <textarea name="address" class="form-control">
                <%= c.address %>
            </textarea>
        </div>
        <div class="mb-3">
            <label for="">Gender</label>
            <input type="radio" name="gender" value="male">Male
            <input type="radio" name="gender" value="female">Female
        </div>
<div class="mb-3">
            <label for="">Education</label>
            <select name="education" class="form-control form-select">
                <option value="">select education</option>
                <option value="10">10th</option>
                <option value="12">12th</option>

            </select>
        </div>
<div class="mb-3">
            <label for="">Course</label>
            <input type="text" readonly value="btech" class="form-control" name="course">
        </div>
        <button type="submit" class="btn btn-success">Update</button>

    </form>
   

</div>

<%- include("../footer.ejs") %>
